{
  "name": "nodejs-starter",
  "version": "1.0.0",
  "description": "NodeJS starter template equipped with MongoDB and Mongoose for streamlined REST API development.",
  "main": "app.js",
  "scripts": {
    "start": "cross-env ENV_PATH=src/env/.env.development nodemon",
    "dev": "npm start",
    "qa": "cross-env ENV_PATH=src/env/.env.qa ts-node -r tsconfig-paths/register src/app.ts",
    "prod": "cross-env ENV_PATH=src/env/.env.production ts-node -r tsconfig-paths/register src/app.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jerrol Krause",
  "license": "MIT",
  "prettier": {
    "tabWidth": 2,
    "printWidth": 160,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.4",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "cross-env": "^7.0.3",
    "nodemon": "^1.18.3",
    "prettier": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/multer": "^1.4.7",
    "bcryptjs": "^2.4.3",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-handlebars": "^3.0.0",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "mongodb": "^3.1.6",
    "mongoose": "^5.2.17",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  }
}
